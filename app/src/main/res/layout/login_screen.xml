<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/background">

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Login"
        android:id="@+id/LoginButton"
        android:layout_gravity="center_vertical"
        android:onClick="onButtonClick"
        android:background="@drawable/button_design"
        android:layout_marginTop="67dp"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:layout_below="@+id/TFpassword"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Link Data Scanner"
        android:id="@+id/TFlogin_title"
        android:layout_alignWithParentIfMissing="false"
        android:padding="30dp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:width="300dp"
        android:textSize="35dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Create New Account"
        android:id="@+id/creationButton"
        android:onClick="onButtonClick"
        android:nestedScrollingEnabled="false"
        android:background="@drawable/button_design"
        android:layout_alignWithParentIfMissing="false"
        android:padding="10dp"
        android:layout_below="@+id/LoginButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <EditText
        android:id="@+id/TFusername"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@drawable/textbox"
        android:paddingLeft="50dp"
        android:inputType="text"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/TFlogin_title"
        android:textAlignment="center"
        android:paddingRight="10dp"
        android:layout_marginTop="80dp"
        android:layout_alignLeft="@+id/useless"
        android:layout_alignStart="@+id/useless"
        android:editable="false"
        android:hint="Username"
        android:layout_alignRight="@+id/useless"
        android:layout_alignEnd="@+id/useless">

    </EditText>

    <EditText
        android:id="@+id/TFpassword"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@drawable/textbox"
        android:paddingLeft="50dp"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/TFusername"
        android:layout_alignStart="@+id/TFusername"
        android:layout_alignRight="@+id/TFusername"
        android:layout_alignEnd="@+id/TFusername"
        android:hint="Password"
        android:paddingRight="10dp" />

    <TextView
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/useless"
        android:layout_below="@+id/TFlogin_title"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

     <ImageView
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:id="@+id/imageView"
        android:src="@mipmap/user"
        android:paddingLeft="10dp"
        android:layout_alignTop="@+id/TFusername"
        android:layout_alignLeft="@+id/TFusername"
        android:layout_alignStart="@+id/TFusername" />


    <ImageView
        android:layout_width="40dp"
        android:layout_height="32dp"
        android:id="@+id/imageView2"
        android:src="@mipmap/lock_icon2"
        android:layout_alignTop="@+id/TFpassword"
        android:layout_alignLeft="@+id/TFpassword"
        android:layout_alignStart="@+id/TFpassword"
        android:paddingLeft="5dp"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:src="@drawable/book_1"
        android:layout_alignLeft="@+id/LoginButton"
        android:layout_alignStart="@+id/LoginButton"
        android:layout_above="@+id/imageView"
        android:layout_alignTop="@+id/TFlogin_title"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="25dp" />

</RelativeLayout>