<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:textAlignment="center"
    android:paddingEnd="10dp">

    <Button
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/CreateBckButton"
        android:onClick="OnClick"
        android:background="@drawable/button_design" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:id="@+id/CreateAccount"
        android:onClick="OnClick"
        android:background="@drawable/button_design"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Link Data Scanner"
        android:id="@+id/TFlogin_title"
        android:layout_alignWithParentIfMissing="false"
        android:padding="30dp"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_alignParentStart="false"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Password"
        android:id="@+id/textView2"
        android:layout_marginTop="60dp"
        android:paddingLeft="10dp"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:layout_below="@+id/TFlogin_title"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Username"
        android:background="@drawable/textbox"
        android:singleLine="true"
        android:text="admin"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"
        android:paddingEnd="21dp"
        android:paddingStart="21dp"
        android:layout_alignStart="@+id/TFlogin_title"
        android:layout_above="@+id/Password1"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:background="@drawable/textbox"
        android:id="@+id/Password1"
        android:singleLine="true"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/Username"
        android:layout_alignStart="@+id/Username"
        android:paddingEnd="21dp"
        android:paddingStart="21dp"
        android:password="true"
        android:layout_alignRight="@+id/Username"
        android:layout_alignEnd="@+id/Username" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Confirm Password"
        android:id="@+id/textView5"
        android:layout_marginTop="34dp"
        android:paddingLeft="10dp"
        android:textColor="#FFFFFF"
        android:textIsSelectable="false"
        android:textSize="18dp"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/Password1"
        android:textAlignment="textEnd"
        android:layout_marginRight="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/textbox"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/Password2"
        android:layout_alignBottom="@+id/textView5"
        android:singleLine="true"
        android:password="true"
        android:paddingEnd="21dp"
        android:paddingStart="21dp"
        android:layout_alignLeft="@+id/TFlogin_title"
        android:layout_alignStart="@+id/TFlogin_title"
        android:layout_marginBottom="3dp"
        android:layout_alignRight="@+id/Password1"
        android:layout_alignEnd="@+id/Password1"
        android:layout_marginLeft="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:id="@+id/textView6"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:layout_alignTop="@+id/Username"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

</RelativeLayout>